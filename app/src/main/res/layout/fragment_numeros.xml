                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/buttonNumeros11a11" />

            <Button
                android:id="@+id/buttonNumeros0a6"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="42dp"
                android:background="@drawable/button_numeros"
                android:text="@string/button_numeros_81_a_90"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/buttonNumeros71a80" />

            <Button
                android:id="@+id/buttonNumeros11a11"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="42dp"
                android:background="@drawable/button_numeros"
                android:text="@string/button_numeros_91_a_100"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/buttonNumeros0a6" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>









