                app:layout_constraintTop_toBottomOf="@+id/buttonNumeros21a30" />

            <Button
                android:id="@+id/buttonNumeros41a50"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="42dp"
                android:background="@drawable/button_numeros"
                android:text="@string/button_numeros_41_a_50"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/buttonNumeros31a40" />

            <Button
                android:id="@+id/buttonNumeros51a60"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="42dp"
                android:background="@drawable/button_numeros"
                android:text="@string/button_numeros_51_a_60"
                android:textColor="@android:color/white"
                android:textSize="18sp"
