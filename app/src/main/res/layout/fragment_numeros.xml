                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/buttonNumeros51a60" />

            <Button
                android:id="@+id/buttonNumeros71a80"
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="42dp"
                android:background="@drawable/button_numeros"
                android:text="@string/button_numeros_71_a_80"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintTop_toBottomOf="@+id/buttonNumeros61a70" />

            <Button
                android:id="@+id/buttonNumeros11a10"
